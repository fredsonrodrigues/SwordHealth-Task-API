{
  "name": "task-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "jest --coverage",
    "build:docker": "docker build -t alitectec/task-api-node .",
    "prod:test": "docker exec -it task_ap1 yarn test",
    "prod:configure-prisma": "docker exec -it task_ap1 npx prisma generate && yarn prod:migrate-db && yarn prod:seed-defaults",
    "prod:migrate-db": "docker exec -it task_ap1 npx prisma migrate deploy",
    "prod:seed-defaults": "docker exec -it task_ap1 npx ts-node src/seeder/userSeeder.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "@types/supertest": "^2.0.12",
    "express": "^4.18.2",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.3",
    "nodemon": "^2.0.21",
    "prisma": "^4.11.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "4.11.0",
    "@types/swagger-ui-express": "^4.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "ts-node": "^10.9.1"
  }
}
